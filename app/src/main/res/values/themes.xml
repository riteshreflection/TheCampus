<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TheCampus" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>

    <style name="Theme.TheCampus" parent="Base.Theme.TheCampus" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.TheCampus.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.TheCampus</item>
    </style>
    
    <!-- Dynamic Theme Overlays - Light Mode -->
    <style name="Theme.TheCampus.Purple" parent="Theme.TheCampus">
        <item name="colorPrimary">#6200EE</item>
    </style>
    
    <style name="Theme.TheCampus.Blue" parent="Theme.TheCampus">
        <item name="colorPrimary">#2196F3</item>
    </style>
    
    <style name="Theme.TheCampus.Teal" parent="Theme.TheCampus">
        <item name="colorPrimary">#009688</item>
    </style>
    
    <style name="Theme.TheCampus.Green" parent="Theme.TheCampus">
        <item name="colorPrimary">#4CAF50</item>
    </style>
    
    <style name="Theme.TheCampus.Orange" parent="Theme.TheCampus">
        <item name="colorPrimary">#FF9800</item>
    </style>
    
    <style name="Theme.TheCampus.Red" parent="Theme.TheCampus">
        <item name="colorPrimary">#F44336</item>
    </style>
    
    <style name="Theme.TheCampus.Pink" parent="Theme.TheCampus">
        <item name="colorPrimary">#E91E63</item>
    </style>
    
    <style name="Theme.TheCampus.Indigo" parent="Theme.TheCampus">
        <item name="colorPrimary">#3F51B5</item>
    </style>
    
    <style name="Theme.TheCampus.Cyan" parent="Theme.TheCampus">
