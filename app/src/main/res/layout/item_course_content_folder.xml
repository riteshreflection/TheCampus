<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="top">

    <!-- Tree Line (Visible only if not root) -->
    <ImageView
        android:id="@+id/ivTreeLines"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_tree_branch"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_marginEnd="-4dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <!-- Header Row -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <!-- Arrow Icon (rotates when expanded) -->
                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_chevron_right"
                    android:contentDescription="Expand/Collapse"
                    app:tint="?attr/colorOnSurface"
                    android:layout_marginEnd="14dp"/>

                <!-- Folder Icon -->
                <ImageView
                    android:id="@+id/ivFolderIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_folder"
                    android:contentDescription="Folder"
                    app:tint="?attr/colorPrimary"
                    android:layout_marginEnd="14dp"/>

                <!-- Folder Name -->
                <TextView
                    android:id="@+id/tvFolderName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Folder Name"
                    android:textSize="17sp"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp"/>

                <!-- Lock Icon (visible if locked) -->
                <ImageView
                    android:id="@+id/ivLock"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_lock_closed"
                    android:contentDescription="Locked"
                    app:tint="?attr/colorOnSurface"
                    android:alpha="0.6"
                    android:visibility="gone"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <!-- Nested Content RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSubContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingStart="4dp"
                android:paddingBottom="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
