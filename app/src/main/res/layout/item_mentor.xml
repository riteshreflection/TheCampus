<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/ivMentorPhoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle_gray"
            android:contentDescription="Mentor Photo"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Name -->
            <TextView
                android:id="@+id/tvMentorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Anjali Sharma"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>

            <!-- Specifications -->
            <TextView
                android:id="@+id/tvMentorSpecs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physics, Quantum Mechanics"
                android:textSize="13sp"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="4dp"/>

            <!-- Experience -->
            <TextView
                android:id="@+id/tvMentorExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15+ years of teaching experience"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="2dp"/>

            <!-- Ask Mentor Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAskMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ask Mentor"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_chat_bubble"
                app:iconSize="16dp"
                app:iconPadding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
