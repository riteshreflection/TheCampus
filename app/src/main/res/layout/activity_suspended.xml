<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:padding="24dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieSuspended"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvSuspendedTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tvSuspendedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Suspended"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorError"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/lottieSuspended"
        app:layout_constraintBottom_toTopOf="@+id/tvSuspendedMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSuspendedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your account has been suspended due to violation of our terms. Please contact support for more information."
        android:textSize="16sp"
        android:textColor="?attr/colorOnBackground"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSuspendedTitle"
        app:layout_constraintBottom_toTopOf="@+id/btnContactSupport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContactSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Support"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSuspendedMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
