<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingTop="8dp"
    android:paddingBottom="24dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_handle"
        android:alpha="0.4" />

    <!-- Message Preview -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender Name"
                android:textColor="?attr/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvMessagePreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message preview text..."
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Reactions Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="Quick Reactions"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAllCaps="true" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/btnReaction1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="ðŸ‘"
                android:textSize="28sp"
                android:background="@drawable/reaction_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnReaction2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="â¤ï¸"
                android:textSize="28sp"
                android:background="@drawable/reaction_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnReaction3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="ðŸ˜‚"
                android:textSize="28sp"
                android:background="@drawable/reaction_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnReaction4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="ðŸ˜®"
                android:textSize="28sp"
                android:background="@drawable/reaction_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnReaction5"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="ðŸ˜¢"
                android:textSize="28sp"
                android:background="@drawable/reaction_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnReaction6"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="ðŸ”¥"
                android:textSize="28sp"
                android:background="@drawable/reaction_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnReaction7"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="ðŸŽ‰"
                android:textSize="28sp"
                android:background="@drawable/reaction_button_bg"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/colorOutlineVariant"
        android:alpha="0.5" />

    <!-- Actions Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Actions"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAllCaps="true" />

    <!-- Copy -->
    <LinearLayout
        android:id="@+id/btnCopy"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_copy"
            app:tint="?attr/colorOnSurface"
            android:alpha="0.7" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Copy Message"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Reply -->
    <LinearLayout
        android:id="@+id/btnReply"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_reply"
            app:tint="?attr/colorOnSurface"
            android:alpha="0.7" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Reply"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Edit (Only for own messages) -->
    <LinearLayout
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            app:tint="?attr/colorOnSurface"
            android:alpha="0.7" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Edit Message"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Delete (Only for own messages) -->
    <LinearLayout
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            app:tint="#F44336"
            android:alpha="0.9" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Delete Message"
            android:textColor="#F44336"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Report (Only for others' messages) -->
    <LinearLayout
        android:id="@+id/btnReport"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_flag"
            app:tint="#FF9800"
            android:alpha="0.9" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Report Message"
            android:textColor="#FF9800"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
