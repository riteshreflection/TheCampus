<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thumbnail with Discount Badge -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/ivCourseThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_book"
                android:background="?attr/colorSurface"
                android:contentDescription="Course Thumbnail"/>

            <!-- Discount Badge -->
            <TextView
                android:id="@+id/tvDiscountBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/bg_discount_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="50% OFF"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Tag -->
            <TextView
                android:id="@+id/tvCourseTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Series"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"
                android:background="@drawable/bg_tag"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="8dp"/>

            <!-- Description (Title in design seems to be inside image, but we'll use description as main text here or title) -->
            <!-- The design has a title inside the image, and a description below. Let's keep title below for now if image doesn't have it baked in, or use description as the main text body -->
            <TextView
                android:id="@+id/tvCourseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvCourseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This course is designed for students..."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="12dp"/>

            <!-- Pricing (Hidden for enrolled courses) -->
            <LinearLayout
                android:id="@+id/layoutPricing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvDiscountedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹299"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹499"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.6"/> 

            </LinearLayout>

            <!-- Progress Bar (Visible for enrolled courses) -->
            <LinearLayout
                android:id="@+id/layoutProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Course Progress"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.7"/>

                    <TextView
                        android:id="@+id/tvProgressPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"/>
                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:max="100"
                    app:indicatorColor="@color/colorSuccess"
                    app:trackColor="@color/colorDivider"
                    app:trackCornerRadius="4dp"/>

            </LinearLayout>

            <!-- Enroll Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Enroll Now"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                app:cornerRadius="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
